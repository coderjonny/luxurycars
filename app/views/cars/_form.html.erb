<div class= "well well-lg">

  <%#Show some errors%>

  <%= form_for(@car) do |f| %>
        <div class="row">
          <div class="form-group col-sm-3">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="form-group col-sm-3">
            <%= f.label :model %>
            <%= f.text_field :model, class: "form-control"  %>
          </div>
          <div class="form-group col-sm-3">
            <%= f.label :year %>
            <%= f.number_field :year, class: "form-control" %>
          </div>
          <div class="form-group col-sm-3">
            <%= f.label :transmission %>
            <%= f.select(:transmission, options_for_select([['idk','idk'], ['auto', 'auto'], ['manual', 'manual']]), {}, class: "form-control") %>
          </div>
          <div class="form-group col-sm-3">
            <%= f.label :price %>
            <%= f.number_field :price, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-sm-3">
            <%= f.submit 'Add', class: "btn btn-lg btn-success"%>
          </div>
        </div>
  <% end %>
</div>
