<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>
<h1>Listing cars</h1>

<div class="jumbotron">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Model</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.name %></td>
          <td><%= car.model %></td>
          <td><%= car.year %></td>
          <td><%= link_to 'Show', car %></td>
          <td><%= link_to 'Destroy', car, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Car', new_car_path, class: 'btn btn-default btn-lg' %>
