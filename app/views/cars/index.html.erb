<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<h1 class="text-center">Luxury cars</h1>

<div class="well well-lg">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Model</th>
        <th>Transmission</th>
        <th>Year</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cars.each do |car| %>
        <tr>
          <td><%= car.name %></td>
          <td><%= car.model %></td>
          <td><%= car.transmission %></td>
          <td><%= car.year %></td>
          <td><%= car.price %></td>
          <td><%= link_to 'Sold', car, method: :delete, class: "btn btn-warning" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="text-center">
  <%= link_to 'Add New Luxury Vehicle', new_car_path, class: 'btn btn-default btn-lg' %>
</div>
